<script>
    $(document).ready(() => {
        if(Cookies.get('theme')) {
            $('body').attr('theme', Cookies.get('theme'));
        }

        $('#theme-switch').on('click', () => {
            $('#theme-switch').toggleClass('flip');
            $('#theme-switch').toggleClass('fa-sun');
            $('#theme-switch').toggleClass('fa-moon');

            if($('body').attr('theme') == 'dark') {
                $('body').attr('theme', 'light');
                Cookies.set('theme', 'light');
            } else {
                $('body').attr('theme', 'dark');
                Cookies.set('theme', 'dark');
            }
        });

        $("body").contextmenu(function() {
            return false;
        });

        $("img").mousedown(function(e) {
            e.preventDefault();
        });
    });
</script>

